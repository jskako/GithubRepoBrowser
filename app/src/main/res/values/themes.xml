<?xml version="1.0" encoding="utf-8"?>
<resources>

    !-- Base splash theme. -->
    <style name="Theme.SplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/purple_40</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_icon</item>
        <item name="windowSplashScreenAnimationDuration">800</item>
        <item name="postSplashScreenTheme">@style/Theme.GithubRepoBrowser</item>
    </style>

    <style name="Theme.GithubRepoBrowser" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/purple_40</item>
    </style>
</resources>